<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="payment_method_multisafepay" model="payment.method">
        <field name="name">Multisafepay</field>
        <field name="code">multisafepay</field>
        <field name="image" type="base64" file="payment_multisafepay/static/description/icon.png"/>
        <field name="support_tokenization">True</field>
        <field name="support_express_checkout">False</field>
        <field name="support_refund">partial</field>
    </record>

    <record id="account_payment_method_multisafepay_in" model="account.payment.method">
        <field name="name">Multisafepay</field>
        <field name="code">multisafepay</field>
        <field name="payment_type">inbound</field>
    </record>
    <record id="account_payment_method_multisafepay_out" model="account.payment.method">
        <field name="name">Multisafepay</field>
        <field name="code">multisafepay</field>
        <field name="payment_type">outbound</field>
    </record>

</odoo>
