<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="auto_sale_order_form_view" model="ir.ui.view">
        <field name="name">auto.sale.order.form.view</field>
        <field name="model">auto.sale.order</field>
        <field name="arch" type="xml">
            <form string="form_view">
                <sheet>
                    <group>
                        <group>
                            <field name="product_id"/>
                            <field name="customer_id"/>
                            <field name="quantity"/>
                            <field name="price"/>
                            <field name="tot_price"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_auto_sale_order" string="Confirm" type="object" class="btn btn-primary"/>
                        <button special="cancel" string="Cancel" class="btn btn-default"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>